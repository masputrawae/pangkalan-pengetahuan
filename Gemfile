source "https://rubygems.org"

# Menggunakan Jekyll
gem "jekyll", "~> 4.3.4"
gem "jekyll-seo-tag" # Untuk optimasi SEO
gem "minima"
gem "webrick"
group :jekyll_plugins do
    gem "jekyll-feed", "~> 0.12"
    gem "jekyll-sitemap"
    gem "jekyll-paginate"
  end

# Jika menggunakan tema tertentu, tambahkan di sini
# gem "minima" # Contoh tema minima

# Tambahkan gem lain sesuai kebutuhan
# gem "jekyll-admin" # Untuk interface admin
gem "kramdown" # Untuk pengolahan markdown (biasanya sudah termasuk di Jekyll)

# Pastikan untuk menginstal bundler jika belum
gem "bundler", "~> 2.0" # Versi bundler, bisa disesuaikan
